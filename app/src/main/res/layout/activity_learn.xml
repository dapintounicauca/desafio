<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.unicauca.moviles.alimentaahomero.LearnActivity">

    <ImageView
        android:id="@+id/img_fondo_aprende"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00c2e6"
        />

    <ImageView
        android:id="@+id/img_titulo_intro"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/titulo_intro"
        android:layout_marginTop="@dimen/small_margin"/>

    <TextView
        android:id="@+id/txt_guia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8e8e8"
        android:layout_margin="@dimen/medium_margin"
        android:padding="10dp"
        android:text="Arrastra y suelta una de las frutas en alguno de los Ã³rganos del sistema digestivo de Homero."
        android:layout_below="@id/img_titulo_intro"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/contenedor_frutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e8e8e8"
        android:layout_below="@id/txt_guia"
        android:layout_marginLeft="@dimen/medium_margin">

        <TextView
            android:text="Frutas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/img_manzana"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/manzana"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_naranja"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/naranja"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_mango"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mango"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contenedor_organos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#e8e8e8"
        android:layout_below="@id/txt_guia"
        android:layout_toRightOf="@+id/contenedor_frutas"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"

        >
        <ImageView
            android:id="@+id/img_digestivocompleto"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:src="@drawable/digestivocompleto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</RelativeLayout>
