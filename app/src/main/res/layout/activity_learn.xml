<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.unicauca.moviles.alimentaahomero.LearnActivity">

    <ImageView
        android:id="@+id/img_fondo_aprende"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00c2e6"
        />

    <ImageView
        android:id="@+id/img_titulo_intro"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/titulo_intro"
        android:layout_marginTop="@dimen/small_margin"/>

    <RelativeLayout
        android:id="@+id/contenedor_info"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#e8e8e8"
        android:layout_margin="@dimen/medium_margin"
        android:padding="10dp"
        android:layout_below="@id/img_titulo_intro"
        >
        <ImageView
            android:id="@+id/img_info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/homer_info"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/titulo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_info_aprender"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/img_info"/>

        <TextView
            android:id="@+id/contenido_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contenido_info_aprender"
            android:layout_below="@id/titulo_info"
            android:layout_toRightOf="@id/img_info"
            android:textColor="#d2000000"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contenedor_frutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e8e8e8"
        android:layout_below="@id/contenedor_info"
        android:layout_marginLeft="@dimen/medium_margin">

        <TextView
            android:text="Frutas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/img_manzana"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/manzana"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/img_naranja"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/naranja"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/img_mango"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mango"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contenedor_organos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#e8e8e8"
        android:layout_below="@id/contenedor_info"
        android:layout_toRightOf="@+id/contenedor_frutas"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"

        >
        <ImageView
            android:id="@+id/img_digestivocompleto"
            android:layout_width="288dp"
            android:layout_height="867dp"
            android:src="@drawable/digestivocompleto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <TableLayout
            android:layout_width="288dp"
            android:layout_height="867dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:stretchColumns="*">
            <TableRow android:layout_weight="0.7">
                <ImageView />
                <ImageView />
                <ImageView />
                <ImageView />
            </TableRow>
            <TableRow
                android:layout_weight="0.5">
                <ImageView />
                <LinearLayout
                    android:id="@+id/pt_boca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#550033cc"
                    android:layout_span="2"
                    android:orientation="vertical" />
            </TableRow>
            <TableRow
                android:layout_weight="1.2">
                <ImageView />
                <ImageView />
                <LinearLayout android:id="@+id/pt_esofago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#5500ff00"
                    android:orientation="vertical"/>
            </TableRow>
            <TableRow
                android:layout_weight="1.2">
                <LinearLayout
                    android:id="@+id/pt_higado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55780018"
                    android:layout_span="3"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:id="@+id/pt_estomago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55fe4c6a"
                    android:orientation="vertical"/>
            </TableRow>
            <TableRow
                android:layout_weight="0.4">
                <ImageView />
                <LinearLayout
                    android:id="@+id/pt_pancreas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55fffd00"
                    android:layout_span="2"
                    android:orientation="vertical"/>
            </TableRow>
            <TableRow android:layout_weight="0.3">
                <LinearLayout
                    android:id="@+id/pt_grueso_1"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="4"
                    android:orientation="vertical"/>
            </TableRow>
            <TableRow
                android:layout_weight="1.2">
                <LinearLayout
                    android:id="@+id/pt_grueso_2"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:id="@+id/pt_delgado"
                    android:background="#55bb32b2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:id="@+id/pt_grueso_3"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
            </TableRow>
            <TableRow
                android:layout_weight="0.7">
                <ImageView />
                <LinearLayout
                    android:id="@+id/pt_grueso_4"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:orientation="vertical"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</RelativeLayout>
