<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:background="@drawable/cielo_intro">

    <ImageView
        android:id="@+id/img_titulo_intro"
        android:layout_width="@dimen/width_titulo_principal"
        android:layout_height="@dimen/height_titulo_principal"
        android:background="@drawable/titulo_intro"
        android:layout_margin="@dimen/large_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btn_aprender"
        android:layout_alignStart="@+id/btn_aprender" />

    <android.support.v7.widget.AppCompatButton
        app:theme="@style/ButtonAccent"
        android:theme="@style/ButtonAccent"
        android:id="@+id/btn_aprender"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/padding_txt_pregunta"
        android:text="@string/txt_btn_aprender"
        android:layout_below="@+id/img_titulo_intro"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:textSize="@dimen/txt_size_btn" />

    <android.support.v7.widget.AppCompatButton
        app:theme="@style/ButtonAccent"
        android:id="@+id/btn_evaluar"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/padding_txt_pregunta"
        android:text="@string/txt_btn_evaluar"
        android:layout_below="@+id/btn_aprender"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="@dimen/txt_size_btn" />

    <ImageView
        android:id="@+id/img_homero_intro"
        android:layout_width="@dimen/height_titulo_principal"
        android:layout_height="wrap_content"
        android:background="@drawable/homero_intro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn_evaluar"
        android:layout_below="@+id/btn_aprender" />

    <ImageView
        android:id="@+id/img_salir"
        android:layout_width="@dimen/size_fruit"
        android:layout_height="@dimen/size_fruit"
        android:layout_alignParentBottom="true"
        android:src="@drawable/salir"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        />

</RelativeLayout>
