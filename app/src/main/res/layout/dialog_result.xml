<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Has ganado"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo_resultado"
        android:text="Â¡Bien hecho!"/>

    <ImageView
        android:id="@+id/img_resultado"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/titulo_resultado"
        android:layout_toRightOf="@id/txt_resultado"
        android:src="@drawable/has_ganado"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_jugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Volver a jugar" />

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Salir"/>

    </LinearLayout>
</RelativeLayout>
