<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unicauca.moviles.alimentaahomero.EvaluateActivity">

    <ImageView
        android:id="@+id/img_fondo_evalua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8ae124"
        />

    <ImageView
        android:id="@+id/img_titulo_intro"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/titulo_intro"
        android:layout_marginTop="@dimen/small_margin"/>

    <RelativeLayout
        android:id="@+id/contenedor_preguntas"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#e8e8e8"
        android:layout_margin="@dimen/medium_margin"
        android:padding="5dp"
        android:layout_below="@id/img_titulo_intro">

        <ImageView
            android:id="@+id/img_pregunta"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/homero_intelectual"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/num_pregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_toRightOf="@id/img_pregunta"/>

        <TextView
            android:id="@+id/pregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_pregunta"
            android:layout_toRightOf="@id/img_pregunta"
            android:textColor="#d2000000"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contenedor_organos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#e8e8e8"
        android:layout_below="@id/contenedor_preguntas"
        android:layout_toRightOf="@+id/contenedor_frutas"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        >
        <ImageView
            android:id="@+id/img_digestivocompleto"
            android:layout_width="288dp"
            android:layout_height="867dp"
            android:src="@drawable/digestivocompleto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <TableLayout
            android:layout_width="288dp"
            android:layout_height="867dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:stretchColumns="*">
            <TableRow android:layout_weight="0.7">
                <ImageView />
                <ImageView />
                <ImageView />
                <ImageView />
            </TableRow>
            <TableRow
                android:layout_weight="0.5">
                <ImageView />
                <ImageView
                    android:id="@+id/pt_boca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#550033cc"
                    android:layout_span="2" />
            </TableRow>
            <TableRow
                android:layout_weight="1.2">
                <ImageView />
                <ImageView />
                <ImageView android:id="@+id/pt_esofago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#5500ff00"/>
            </TableRow>
            <TableRow
                android:layout_weight="1.2">
                <ImageView
                    android:id="@+id/pt_higado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55780018"
                    android:layout_span="3"/>
                <ImageView
                    android:id="@+id/pt_estomago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55fe4c6a"/>
            </TableRow>
            <TableRow
                android:layout_weight="0.4">
                <ImageView />
                <ImageView
                    android:id="@+id/pt_pancreas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55fffd00"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow android:layout_weight="0.3">
                <ImageView
                    android:id="@+id/pt_grueso_1"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="4"/>
            </TableRow>
            <TableRow
                android:layout_weight="1.2">
                <ImageView
                    android:id="@+id/pt_grueso_2"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/pt_delgado"
                    android:background="#55bb32b2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"/>
                <ImageView
                    android:id="@+id/pt_grueso_3"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </TableRow>
            <TableRow
                android:layout_weight="0.7">
                <ImageView />
                <ImageView
                    android:id="@+id/pt_grueso_4"
                    android:background="#5500ffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>